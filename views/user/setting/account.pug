extends ../../layout

block public

block content
    div.container-fluid
        div.user-wrapper
            div.user-side(role="navigation")
                nav.menu
                    h3.menu-header 个人设置
                    a.menu-item(href="/settings/profile") 简介
                    a.menu-item(href="/settings/avatar") 头像
                    a.menu-item.selected 密码
                    a.menu-item(href="/settings/email") 电子邮件
                    a.menu-item(href="/settings/privacy") 隐私
            div.user-main.card.p-2
                div.setting-header
                    h2.setting-header-text 账号
                if (error)
                    +alert('danger',error)
                if (success)
                    +alert('success',success)
                form.user-profile-form(method="post" action="/settings/account")
                    div.form-group
                        label.user-profile-label(for="oldPassword") 旧密码
                        input.form-control.user-profile-input(name="oldPassword" id="oldPassword" type="password" tabindex="2" required)
                    div.form-group
                        label.user-profile-label(for="password") 新密码
                        input.form-control.user-profile-input(name="password" id="password" type="password" tabindex="2" required)
                    div.form-group
                        label.user-profile-label(for="rePassword") 确认新密码
                        input.form-control.user-profile-input(name="rePassword" id="rePassword" type="password" tabindex="2" required)
                    div.form-group
                        input.btn.btn-primary.center-block(type="submit" value="提交")